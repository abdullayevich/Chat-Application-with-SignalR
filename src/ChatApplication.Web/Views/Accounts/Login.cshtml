@model AccountLoginDto
@{
    Layout = "_AccountLayout";  // Layout faylini ulash
}
<div class="login-container">
    <h2>Login</h2>
    <form asp-controller="accounts" asp-action="login">
        <div class="form-group">
            <label for="email">Email:</label>
            <input
                  type="email"
                  placeholder="Type here"
                  class="input input-bordered input-primary w-full max-w-xs" id="email" name="email" />
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button class="button-65" role="button" > Login</button >
    </form>
    <p class="register-link">Yangi hisob yaratasizmi? <a href="/Register">Ro'yxatdan o'tish</a></p>
</div>