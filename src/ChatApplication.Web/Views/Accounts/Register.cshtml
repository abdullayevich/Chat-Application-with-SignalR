@model AccountRegisterDto
@{
    Layout = "_AccountLayout";  // Layout faylini ulash
}
<div class="register-container">
<h2>Register</h2>
<form asp-controller="accounts" asp-action="register">
    <div class="form-group">
            <label for="UserName">UserName:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Parol:</label>
            <input type="password" id="password" name="password" required>
        </div>
        @* <div class="form-group">
            <label for="confirmPassword">Parolni tasdiqlash:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div> *@
        <button type="submit" class="register-btn">Ro'yxatdan o'tish</button>
</form>
<p class="login-link">Mavjud hisobingiz mavjudmi? <a href="/login">Kirish</a></p>
</div>
