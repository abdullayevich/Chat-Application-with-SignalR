@using ChatApplication.Service.ViewModels.UserViewModels
@model IEnumerable<AllUserViewModel>

@{
    ViewData["Title"] = "My Contacts";
}

<h2>My Contacts</h2>
<h2>All Chats</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>
                <td><button onclick="openChatWindow('@user.Id', '@user.Username')">@user.Username bilan chat</button></td>
                <a asp-controller="Contact" asp-action="DirectChat" asp-route-username="@user.Username" class="btn btn-primary open-chat">@user.Username</a></td>
                <td>@user.Email</td>
                <td>@(user.Status ? "Active" : "Inactive")</td>
            </tr>
        }
    </tbody>
</table>
<script>
    function openChatWindow(userId, userName) {
        window.location.href = '/Contact/DirectChat?userId=' + userId + '&userName=' + userName;
    }
</script>